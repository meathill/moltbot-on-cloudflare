# Basic Auth
SERVER_USERNAME=moltbot
SERVER_PASSWORD=change-me

# Moltbot Gateway
MOLTBOT_GATEWAY_PORT=18789
MOLTBOT_GATEWAY_BIND=lan
MOLTBOT_STATE_DIR=/root/s3/moltbot
MOLTBOT_WORKSPACE_DIR=/root/s3/clawd
MOLTBOT_ARGS=--allow-unconfigured

# Optional config injection (JSON or JSON5)
# MOLTBOT_CONFIG_JSON={"gateway":{"mode":"local","bind":"lan","port":18789}}
# MOLTBOT_CONFIG_PATH=/root/s3/moltbot/moltbot.json

# S3 Persistence Config (optional)
S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=<access-key>
S3_SECRET_ACCESS_KEY=<secret-key>
S3_BUCKET=<bucket>
S3_PREFIX=moltbot
