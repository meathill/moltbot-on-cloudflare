# Basic Auth（可选，设置 SERVER_PASSWORD 即启用）
SERVER_USERNAME=moltbot
SERVER_PASSWORD=change-me

# 容器最简服务配置（可选）
CONTAINER_MODE=status
CONTAINER_STATUS_MESSAGE=ok
CONTAINER_VERSION=dev
CONTAINER_PORT=18789
CONTAINER_BIND=0.0.0.0

# R2 / S3 持久化（可选，参考 cloud-code）
S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
S3_BUCKET=your-bucket
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=auto
# S3_PATH_STYLE=true
# S3_PREFIX=project-prefix
# S3_MOUNT_POINT=/root/s3
# S3_MOUNT_REQUIRED=true
# TIGRISFS_ARGS=--read-only

# Moltbot Gateway（稳健版）
MOLTBOT_GATEWAY_BIND=lan
MOLTBOT_GATEWAY_PORT=18789
MOLTBOT_GATEWAY_AUTH_MODE=token
MOLTBOT_GATEWAY_VERBOSE=false
MOLTBOT_ALLOW_UNCONFIGURED=false
CLAWDBOT_GATEWAY_TOKEN=change-me
# 可选：覆盖 CLI 自动配对的网关地址
# CLAWDBOT_GATEWAY_URL=ws://127.0.0.1:18789
# 自动配对（临时调试用）
# 优先使用设备配对（解决 Control UI pairing required）
CLAWDBOT_AUTO_APPROVE_DEVICES=false
# 兼容旧字段（将来可能移除）
# CLAWDBOT_AUTO_APPROVE_NODES=false
# CLAWDBOT_AUTO_APPROVE_INTERVAL_MS=4000
# 可选：指定 CLI 命令（默认自动探测 moltbot/clawdbot/clawd）
# MOLTBOT_CLI=clawdbot
# 可选：用完整配置 JSON/JSON5 覆盖（不建议在生产变量中明文存放）
# MOLTBOT_CONFIG_JSON={"gateway":{"mode":"local","bind":"lan","port":18789,"auth":{"mode":"token","token":"${CLAWDBOT_GATEWAY_TOKEN}"}}}
# 可选：自定义配置路径（默认 /root/.clawdbot/moltbot.json）
# CLAWDBOT_CONFIG_PATH=/root/.clawdbot/moltbot.json
